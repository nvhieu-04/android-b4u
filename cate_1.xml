<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/productName4"
        android:layout_width="161dp"
        android:layout_height="37dp"
        android:layout_marginStart="216dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="Volumnous"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/careimageProduct4" />

    <TextView
        android:id="@+id/productName3"
        android:layout_width="162dp"
        android:layout_height="35dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="HAUS LABO"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/careimageProduct3" />

    <TextView
        android:id="@+id/productName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="228dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="KYLIE Skin"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/careimageProduct2" />

    <ImageView
        android:id="@+id/careimageProduct4"
        android:layout_width="137dp"
        android:layout_height="138dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="212dp"

        android:layout_marginEnd="8dp"
        android:background="@drawable/border"
        android:src="@drawable/product_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.804"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/careback" />

    <TextView
        android:id="@+id/productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="TextView"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/careimageProduct" />

    <ImageView
        android:id="@+id/careimageProduct3"
        android:layout_width="137dp"
        android:layout_height="138dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="212dp"

        android:layout_marginEnd="8dp"
        android:background="@drawable/border"
        android:src="@drawable/product_9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/careback" />

    <ImageView
        android:id="@+id/careimageProduct2"
        android:layout_width="137dp"
        android:layout_height="138dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="20dp"

        android:layout_marginEnd="8dp"
        android:background="@drawable/border"
        android:src="@drawable/product_21"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.804"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/careback" />

    <ImageView
        android:id="@+id/careback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/carecart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_cart"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_bold"
        android:text="Chi Tiết Sản Phẩm"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/careback"
        app:layout_constraintEnd_toStartOf="@+id/carecart"
        app:layout_constraintStart_toEndOf="@+id/careback"
        app:layout_constraintTop_toTopOf="@+id/careback" />

    <ImageView
        android:id="@+id/careimageProduct"
        android:layout_width="137dp"
        android:layout_height="138dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="20dp"

        android:layout_marginEnd="8dp"
        android:background="@drawable/border"
        android:src="@drawable/product_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/careback" />


</androidx.constraintlayout.widget.ConstraintLayout>